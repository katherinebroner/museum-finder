<% if @museum.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@museum.errors.count, "error") %></h2>
    <ul>
    <% @museum.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="small-5 columns">
    <%= image_tag "american_folk_art.jpg" %>
  </div>
  <div class="small-7 columns">
    <div class="row">
      <div class="small-12">
        <h3><%= @museum.name.upcase %></h3></br>
      </div>
    </div>
    <div class="row">
      <div class="small-4 columns">
        <i class="fi-star"></i>
      </div>
      <div class="small-4 columns">
        <i class="fi-clock"></i>
      </div>
      <div class="small-4 columns">
        <i class="fi-star"></i>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-4 columns">
    <h4>Hours:</h4>
  </div>
  <div class="small-4 columns">
    <h4>Admission</h4></br>
    <h4>Specials<h4>
  </div>
  <div class="small-4 columns">
    <h4>Contact</h4>
  </div>
</div>