<!DOCTYPE html>
<html>
<head>
  <title>MuseumFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.min.css"/>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>
<body>

<header>
  <nav>
    <div class="title-bar" data-responsive-toggle="main-menu" data-hide-for="">
      <button class="menu-icon slide-down-menu-button" type="button" data-toggle></button>
      <div class="title-bar-title"><a href="/">LOGO</a></div>
      <div class="title-bar-title"><a href="/">IMAGE</a></div>

    <div id='search-form'>
      <%= form_tag search_path, :method => 'get' do %>
        <p>
          <%= text_field_tag 'keyword', nil%>
          <%= submit_tag "Search for Museum", :name => nil %>
        </p>
      <% end %>
    </div>
    </div>
    <div class="top-bar menu-to-expand" id="main-menu">
      <div class="top-bar-left">
        <ul class="vertical dropdown menu" id="hamburger" data-dropdown-menu>
          <%if signed_in?%>
            <li class="row"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
            <li class="row"><%= link_to 'Favorites', user_path(current_user.id)%></li>
          <%else%>
            <li class="row"><%= link_to "Sign in", new_user_session_path %></li>
            <li class="row"><%= link_to "Sign up", new_user_registration_path %></li>
          <%end%>
        </ul>
      </div>
    </div>
  </nav>
</header>

<%= yield %>

</body>
<div id="footer">Footer</div>
</html>