<!DOCTYPE html>
<html>
<head>
  <title>MuseumFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="top-bar horizontal" data-topbar role="navigation" id="top-bar">
  <div class="top-bar-left">

  <ul class="title-area menu">
    <li class="toggle-topbar menu-icon"><a href="#"></a></li>
    <li class="name">
      <a href="#">My Site</a>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
  </ul>
  </div>

  <section class="top-bar-right horizontal">
    <!-- Right Nav Section -->
    <ul class="menu">
      <%if signed_in?%>
        <li class="active"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
      <%else%>
        <li class="active"><%= link_to "Sign in", new_user_session_path %></li>
        <li class="active"><%= link_to "Sign up", new_user_registration_path %></li>
      <%end%>
    </ul>
  </section>
</div>

<%= yield %>

</body>
</html>
